# Application Settings
APP_NAME=Fintech Backend API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/fintech_db

# Security Settings
SECRET_KEY=your-super-secret-jwt-key-here
REQUEST_TIMEOUT=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","https://hoardrun.vercel.app"]
CORS_ALLOW_CREDENTIALS=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Paystack Configuration
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_ENVIRONMENT=test
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_here
PAYSTACK_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache Settings
CACHE_TTL=300
EXCHANGE_RATE_CACHE_TTL=3600

# Business Settings
DEFAULT_CURRENCY=NGN
SUPPORTED_CURRENCIES=["NGN","USD","GHS","ZAR","KES"]
MAX_TRANSFER_AMOUNT=1000000.0
MIN_TRANSFER_AMOUNT=1.0
